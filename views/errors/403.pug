extends ../layouts/app
block another-styles

block content-wrapper
  .content-wrapper
    section.content-header
      .container-fluid
        .row.mb-2
          .col-sm-6
            h1 #{__("Access Denied")}
          .col-sm-6
            ol.breadcrumb.float-sm-right
              li.breadcrumb-item
                a(href='/') #{__("Home")}
              li.breadcrumb-item.active #{__("Access Denied")}
    section.content
      .error-page
        .error-content
          h3
            i.fas.fa-exclamation-triangle.text-danger
            |  #{__("Oops! Access Denied")}.
          p
            a(href='/') #{__("Return to dashboard")}