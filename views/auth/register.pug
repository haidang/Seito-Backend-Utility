extends layout

block body 
  body.hold-transition.register-page
    .register-box
      .card.card-outline.card-primary
        .card-header.text-center
          a.h2(href='/')
            b=appFirstName + " "
            =appLastName
        .card-body
          p.login-box-msg #{__("Register a new membership")}
          form(action='', method='post')
            .input-group.mb-3
              input.form-control(type='text', placeholder=__("Full name"))
              .input-group-append
                .input-group-text
                  span.fas.fa-user
            .input-group.mb-3
              input.form-control(type='email', placeholder='Email')
              .input-group-append
                .input-group-text
                  span.fas.fa-envelope
            .input-group.mb-3
              input.form-control(type='password', placeholder=__('Password'))
              .input-group-append
                .input-group-text
                  span.fas.fa-lock
            .input-group.mb-3
              input.form-control(type='password', placeholder=__('Retype password'))
              .input-group-append
                .input-group-text
                  span.fas.fa-lock
            .row
              .col-8
                .icheck-primary
                  input#agreeTerms(type='checkbox', name='terms', value='agree')
                  label(for='agreeTerms')
                    | #{__("I agree to the")} 
                    a(href='#') #{__("terms")}
              // /.col
              .col-4
                button.btn.btn-primary.btn-block(type='submit') #{__("Register")}
              // /.col
          .social-auth-links.text-center
            a.btn.btn-block.btn-primary(href='#')
              i.fab.fa-facebook.mr-2 #{__("Sign up using Facebook")}
            a.btn.btn-block.btn-danger(href='#')
              i.fab.fa-google-plus.mr-2 #{__("Sign up using Google+")}
          a.text-center(href='/login') #{__("I already have a membership")}
        // /.form-box
      // /.card
    // /.register-box
    // jQuery
    script(src=template + '/plugins/jquery/jquery.min.js')
    // Bootstrap 4
    script(src=template + '/plugins/bootstrap/js/bootstrap.bundle.min.js')
    // AdminLTE App
    script(src=template + '/dist/js/adminlte.min.js')